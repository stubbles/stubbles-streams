{
    "name": "stubbles/streams",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Input- and OutputStreams.",
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mikey179/vfsstream": "^1.6.8",
        "bovigo/assert": "^6.0",
        "bovigo/callmap": "^6.0",
        "stubbles/reflect": "^9.1",
        "stubbles/sequence": "^9.0",
        "ext-iconv": "*"
    },
    "suggest": {
        "stubbles/sequence": "Easer iteration of input streams with lines() function.",
        "ext-iconv": "For use in decoding and encoding stream decorators."
    },
    "autoload": {
        "psr-4": {
            "stubbles\\streams\\": "src/main/php"
        },
        "files": ["src/main/php/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\streams\\": "src/test/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "php-coveralls": "php-coveralls"
    }
}
